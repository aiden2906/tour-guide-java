<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#eee"
    android:orientation="vertical">


        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <fragment
                android:id="@+id/mapNearBy"
                android:name="com.google.android.gms.maps.MapFragment"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1" />

            <TextView
                android:layout_width="278dp"
                android:layout_height="37dp"
                android:background="#fff"
                android:layout_marginStart="20dp"
                android:layout_marginTop="13dp"/>


            <EditText
                android:theme="@style/EditTextTheme"
                android:id="@+id/search_place"
                android:layout_width="215dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="30dp"
                android:layout_marginTop="10dp"
                android:textSize="13sp"
                android:singleLine="true"
                android:hint="Tìm kiếm" />

            <ImageButton
                android:id="@+id/btn_search"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginStart="250dp"
                android:layout_marginTop="10dp"
                android:background="?attr/selectableItemBackground"
                android:onClick="onClick"
                android:padding="5dp"
                android:scaleType="fitXY"
                android:src="@drawable/ic_search_black_24dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="65dp"
                android:layout_marginTop="555dp"
                android:background="@color/colorPrimary"/>

            <ImageButton
                android:id="@+id/btn_shop"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_marginStart="30dp"
                android:layout_marginTop="565dp"
                android:background="?attr/selectableItemBackground"
                android:onClick="onClick"
                android:padding="0dp"
                android:scaleType="fitXY"
                android:src="@drawable/ic_shopping_cart_black_24dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Mua sắm"
                android:textSize="11sp"
                android:textStyle="normal"
                android:textColor="#fff"
                android:layout_marginTop="595dp"
                android:layout_marginStart="20dp"/>

            <!--========================================================-->

            <ImageButton
                android:id="@+id/btn_restaurant"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_marginStart="90dp"
                android:layout_marginTop="565dp"
                android:background="?attr/selectableItemBackground"
                android:onClick="onClick"
                android:padding="0dp"
                android:scaleType="fitXY"
                android:src="@drawable/ic_restaurant_black_24dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Thức ăn"
                android:textSize="11sp"
                android:textStyle="normal"
                android:textColor="#fff"
                android:layout_marginTop="595dp"
                android:layout_marginStart="85dp"/>

            <!--========================================================-->

            <ImageButton
                android:id="@+id/btn_Baverage"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_marginStart="160dp"
                android:layout_marginTop="565dp"
                android:background="?attr/selectableItemBackground"
                android:onClick="onClick"
                android:padding="0dp"
                android:scaleType="fitXY"
                android:src="@drawable/ic_local_drink_black_24dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nước uống"
                android:textSize="11sp"
                android:textStyle="normal"
                android:textColor="#fff"
                android:layout_marginTop="595dp"
                android:layout_marginStart="150dp"/>

            <!--========================================================-->

            <ImageButton
                android:id="@+id/btnDetail"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:scaleType="fitXY"
                android:background="?attr/selectableItemBackground"
                android:src="@drawable/ic_art_track_black_24dp"
                android:visibility="invisible"
                android:layout_marginStart="225dp"
                android:layout_marginTop="565dp"/>

            <TextView
                android:id="@+id/txtdetail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Chi tiết"
                android:textSize="11sp"
                android:visibility="invisible"
                android:textStyle="normal"
                android:textColor="#fff"
                android:layout_marginTop="595dp"
                android:layout_marginStart="223dp"/>

            <!--========================================================-->

            <ImageButton
                android:id="@+id/btnGetDirection"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:scaleType="fitXY"
                android:background="?attr/selectableItemBackground"
                android:src="@drawable/ic_directions_black_24dp"
                android:visibility="invisible"
                android:layout_marginStart="290dp"
                android:layout_marginTop="565dp"/>

            <TextView
                android:id="@+id/txtDirection"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Chỉ đường"
                android:textSize="11sp"

                android:textStyle="normal"
                android:visibility="invisible"
                android:textColor="#fff"
                android:layout_marginTop="595dp"
                android:layout_marginStart="280dp"/>

    </FrameLayout>

</RelativeLayout>