<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:background="#eee"
    android:layout_height="match_parent"
    tools:context=".ForgotActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageButton
            android:layout_width="30dp"
            android:layout_height="30dp"
            app:srcCompat="@drawable/ic_help_black_24dp"
            android:background="#eee"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center"
            android:layout_marginStart="10dp"
            android:layout_marginTop="20dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="20dp"
            android:layout_marginTop="75dp"
            android:text="Quên mật khẩu"
            android:textColor="#2d2d2d"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="318dp"
            android:layout_height="60dp"
            android:background="#fff"
            android:layout_marginStart="20dp"
            android:layout_marginTop="115dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="40dp"
            android:layout_marginTop="125dp"
            android:text="Tên tài khoản cũ *"
            android:textColor="#2d2d2d"
            android:textSize="15sp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="40dp"
            android:layout_marginTop="145dp"
            android:text="Chứa ít nhất 6 kí tự không bao gồm kí tự đặc biệt"
            android:textColor="#2d2d2d"
            android:textSize="12sp"
            android:textStyle="normal" />

        <!--==========================================================-->

        <android.support.design.widget.TextInputLayout
            android:layout_width="318dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="200dp"
            app:hintEnabled="true">

            <android.support.design.widget.TextInputEditText
                android:id="@+id/edt_tenTK"
                android:layout_width="318dp"
                android:layout_height="wrap_content"
                android:theme="@style/EditTextTheme"
                android:hint="Username"
                android:inputType="textPersonName"
                android:textSize="15sp"
                android:maxLines="1"
                android:layout_marginTop="185dp"/>
        </android.support.design.widget.TextInputLayout>

        <!--==========================================================-->

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="20dp"
            android:layout_marginTop="280dp"
            android:text="Câu hỏi bảo mật"
            android:textColor="#2d2d2d"
            android:textSize="16sp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="318dp"
            android:layout_height="wrap_content"
            android:text="Lưu ý trả lời chính xác câu trả lời đã được lưu (kể cả viết hoa và chữ cái thường)."
            android:textColor="#2d2d2d"
            android:textSize="12sp"
            android:layout_marginTop="305dp"
            android:layout_marginStart="20dp"/>

        <!--==========================================================-->

        <TextView
            android:layout_width="318dp"
            android:layout_height="60dp"
            android:background="#fff"
            android:layout_marginStart="20dp"
            android:layout_marginTop="355dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="40dp"
            android:layout_marginTop="365dp"
            android:text="1. Bạn có đẹp trai không ?"
            android:textColor="#2d2d2d"
            android:textSize="15sp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="40dp"
            android:layout_marginTop="385dp"
            android:text="VD: Có, Không"
            android:textColor="#2d2d2d"
            android:textSize="12sp"
            android:textStyle="normal" />

        <EditText
            android:id="@+id/edt_cau1"
            android:theme="@style/EditTextTheme"
            android:layout_width="318dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="420dp"
            android:textSize="15sp"
            android:hint="Nhập thông tin"
            android:maxLength="35"
            android:maxLines="1"
            android:inputType="text"/>

        <!--==========================================================-->

        <TextView
            android:layout_width="318dp"
            android:layout_height="60dp"
            android:background="#fff"
            android:layout_marginStart="20dp"
            android:layout_marginTop="475dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="40dp"
            android:layout_marginTop="485dp"
            android:text="2. Bạn ở quận mấy ?"
            android:textColor="#2d2d2d"
            android:textSize="15sp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="40dp"
            android:layout_marginTop="505dp"
            android:text="VD: quận 1, quận Thủ Đức"
            android:textColor="#2d2d2d"
            android:textSize="12sp"
            android:textStyle="normal" />

        <EditText
            android:id="@+id/edt_cau2"
            android:theme="@style/EditTextTheme"
            android:layout_width="318dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="540dp"
            android:textSize="15sp"
            android:hint="Nhập thông tin"
            android:maxLength="35"
            android:maxLines="1"
            android:inputType="text"/>

        <TextView
            android:layout_width="318dp"
            android:layout_height="60dp"
            android:background="#fff"
            android:layout_marginStart="20dp"
            android:layout_marginTop="595dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="40dp"
            android:layout_marginTop="605dp"
            android:text="3. Bạn có thích ứng dụng này không ?"
            android:textColor="#2d2d2d"
            android:textSize="15sp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="40dp"
            android:layout_marginTop="625dp"
            android:text="VD: Có, Không"
            android:textColor="#2d2d2d"
            android:textSize="12sp"
            android:textStyle="normal" />

        <EditText
            android:id="@+id/edt_cau3"
            android:theme="@style/EditTextTheme"
            android:layout_width="318dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="660dp"
            android:textSize="15sp"
            android:hint="Nhập thông tin"
            android:maxLength="35"
            android:maxLines="1"
            android:inputType="text"/>

        <Button
            android:id="@+id/btn_timmk"
            android:layout_width="120dp"
            android:layout_height="40dp"
            android:background="@color/colorPrimary"
            android:layout_marginTop="720dp"
            android:layout_centerHorizontal="true"
            android:text="Tìm mật khẩu"
            android:textColor="#fff"
            android:textAllCaps="false"
            android:textSize="12sp"
            style="?android:attr/buttonBarButtonStyle"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="760dp"/>


    </RelativeLayout>
</ScrollView>