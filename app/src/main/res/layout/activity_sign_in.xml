<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#eee"
    tools:context=".SignInActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="20dp"
            android:layout_marginTop="40dp"
            android:text="Đăng ký tài khoản"
            android:textColor="#2d2d2d"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="318dp"
            android:layout_height="60dp"
            android:background="#fff"
            android:layout_marginStart="20dp"
            android:layout_marginTop="80dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="40dp"
            android:layout_marginTop="90dp"
            android:text="Tên tài khoản và mật khẩu mới *"
            android:textColor="#2d2d2d"
            android:textSize="15sp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="40dp"
            android:layout_marginTop="110dp"
            android:text="Chứa ít nhất 6 kí tự không bao gồm kí tự đặc biệt"
            android:textColor="#2d2d2d"
            android:textSize="12sp"
            android:textStyle="normal" />

        <!--==========================================================-->

        <android.support.design.widget.TextInputLayout
            android:layout_width="318dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="150dp"
            app:hintEnabled="true">

            <android.support.design.widget.TextInputEditText
                android:id="@+id/edtName"
                android:layout_width="318dp"
                android:layout_height="wrap_content"
                android:theme="@style/EditTextTheme"
                android:hint="Username"
                android:inputType="textPersonName"
                android:textSize="15sp"
                android:maxLines="1"
                android:layout_marginTop="185dp"/>
        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:layout_width="318dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="205dp"
            app:hintEnabled="true"
            app:counterEnabled="true"
            app:passwordToggleEnabled="true">

            <android.support.design.widget.TextInputEditText
                android:id="@+id/edtPass"
                android:layout_width="318dp"
                android:layout_height="wrap_content"
                android:theme="@style/EditTextTheme"
                android:hint="Password"
                android:inputType="textPassword"
                android:textSize="15sp"
                android:maxLines="1"
                android:layout_marginTop="230dp"/>
        </android.support.design.widget.TextInputLayout>

        <!--==========================================================-->

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="20dp"
            android:layout_marginTop="280dp"
            android:text="Câu hỏi bảo mật"
            android:textColor="#2d2d2d"
            android:textSize="16sp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="318dp"
            android:layout_height="wrap_content"
            android:text="Chúng tôi có thể hỗ trợ bạn tìm lại mật khẩu. Hãy ghi nhớ chính xác câu trả lời của bạn."
            android:textColor="#2d2d2d"
            android:textSize="12sp"
            android:layout_marginTop="305dp"
            android:layout_marginStart="20dp"/>

        <!--==========================================================-->

        <TextView
            android:layout_width="318dp"
            android:layout_height="60dp"
            android:background="#fff"
            android:layout_marginStart="20dp"
            android:layout_marginTop="355dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="40dp"
            android:layout_marginTop="365dp"
            android:text="1. Bạn có đẹp trai không ?"
            android:textColor="#2d2d2d"
            android:textSize="15sp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="40dp"
            android:layout_marginTop="385dp"
            android:text="VD: Có, Không"
            android:textColor="#2d2d2d"
            android:textSize="12sp"
            android:textStyle="normal" />

        <EditText
            android:id="@+id/edtCau1"
            android:theme="@style/EditTextTheme"
            android:layout_width="318dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="420dp"
            android:textSize="15sp"
            android:hint="Nhập thông tin"
            android:maxLength="35"
            android:maxLines="1"
            android:inputType="text"/>

        <!--==========================================================-->

        <TextView
            android:layout_width="318dp"
            android:layout_height="60dp"
            android:background="#fff"
            android:layout_marginStart="20dp"
            android:layout_marginTop="475dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="40dp"
            android:layout_marginTop="485dp"
            android:text="2. Bạn ở quận mấy ?"
            android:textColor="#2d2d2d"
            android:textSize="15sp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="40dp"
            android:layout_marginTop="505dp"
            android:text="VD: quận 1, quận Thủ Đức"
            android:textColor="#2d2d2d"
            android:textSize="12sp"
            android:textStyle="normal" />

        <EditText
            android:id="@+id/edtCau2"
            android:theme="@style/EditTextTheme"
            android:layout_width="318dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="540dp"
            android:textSize="15sp"
            android:hint="Nhập thông tin"
            android:maxLength="35"
            android:maxLines="1"
            android:inputType="text"/>

        <TextView
            android:layout_width="318dp"
            android:layout_height="60dp"
            android:background="#fff"
            android:layout_marginStart="20dp"
            android:layout_marginTop="595dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="40dp"
            android:layout_marginTop="605dp"
            android:text="3. Bạn có thích ứng dụng này không ?"
            android:textColor="#2d2d2d"
            android:textSize="15sp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="40dp"
            android:layout_marginTop="625dp"
            android:text="VD: Có, Không"
            android:textColor="#2d2d2d"
            android:textSize="12sp"
            android:textStyle="normal" />

        <EditText
            android:id="@+id/edtCau3"
            android:theme="@style/EditTextTheme"
            android:layout_width="318dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="660dp"
            android:textSize="15sp"
            android:hint="Nhập thông tin"
            android:maxLength="35"
            android:maxLines="1"
            android:inputType="text"/>

        <Button
            android:id="@+id/btnSignin"
            android:layout_width="120dp"
            android:layout_height="40dp"
            android:background="@color/colorPrimary"
            android:layout_marginTop="720dp"
            android:layout_centerHorizontal="true"
            android:text="Đăng ký"
            android:textColor="#fff"
            android:textAllCaps="false"
            android:textSize="12sp"
            style="?android:attr/buttonBarButtonStyle"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="760dp"/>


    </RelativeLayout>

</ScrollView>